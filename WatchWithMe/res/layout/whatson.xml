<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#25232c">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        
        android:background="@drawable/strip"
        >
        
         <com.digitalaria.gama.carousel.Carousel
        android:id="@+id/carousel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
   
        android:layout_gravity="center_horizontal"/> 
        
          <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
       
        android:background="@drawable/overlay" >

              <ImageView
                  android:id="@+id/imageView1"
                  android:layout_width="wrap_content"
                  android:layout_height="fill_parent"
                  android:layout_alignParentLeft="true"
                  android:layout_alignParentTop="true"
                  android:layout_marginLeft="132dp"
                  android:src="@drawable/indicator" />

        </RelativeLayout>

    </RelativeLayout>
   

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="156dp"
        android:background="@drawable/thumbnail_holde_dummyr" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/thumbnail_overlay" 
            android:alpha="60">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Discovery: Men Vs Wild"
                android:textColor="#ffffff" />

        </RelativeLayout>

    </RelativeLayout><RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="@layout/tv_guide_small_bar" >

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@android:color/transparent"
            android:src="@drawable/btn_checkin" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/imageButton5"
            android:text="1280 Likes"
            android:textColor="#8a8a9e" />

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:layout_toLeftOf="@+id/textView8"
            android:background="@android:color/transparent"
            android:src="@drawable/icon_friends" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageButton6"
            android:layout_alignLeft="@+id/imageButton5"
            android:layout_marginLeft="18dp"
            android:text="CHECK-IN"
            android:textColor="#08c6f7"
            android:textSize="4pt" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_margin="5dp"
        
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".9" 
        android:background="@drawable/viwersbg">

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:src="@drawable/btn_invitefrnds" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:background="@android:color/transparent"
            android:src="@drawable/btn_shoutnow_normal" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text=" Invite\nFriends"
            android:textColor="#08c6f7" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView3"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="14dp"
            android:text="Total Viewers"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#7c7c8b"
            android:textSize="5pt" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_toRightOf="@+id/textView4"
            android:background="@android:color/transparent"
            android:src="@drawable/icon_viewers" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginLeft="24dp"
            android:layout_toRightOf="@+id/imageButton1"
            android:background="@android:color/transparent"
            android:src="@drawable/icon_friends" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageButton4"
            android:layout_toRightOf="@+id/imageButton4"
            android:text="Friends"
            android:textColor="#7c7c8b"
            android:textSize="5pt"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imageButton2"
            android:layout_toLeftOf="@+id/imageButton3"
            android:text="1,634"
            android:textColor="#c9bdf1"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imageButton2"
            android:layout_toRightOf="@+id/imageButton4"
            android:text="300"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#c9bdf1" />

    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:background="@layout/tv_guide_small_bar" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
        android:textColor="#8b8bab"
            android:text="Men Vs Wild" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="14dp"
            android:textColor="#e9e7f2"
            android:text="lkjhf hjhgjhg hgfygf hfutyu ufyutuy hjffyfhjg hfghfuhg \n hjfyttu yurtry ytryfug
            fhgfhgj \n hfhgfghfhjjk hjfgjhg hfhg" />

    </RelativeLayout>

</LinearLayout>
