<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#25232c">
   
 <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_weight=".2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="432dp"
            android:orientation="vertical" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="156dp"
        android:background="@drawable/thumbnail_holde_dummyr" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:alpha="60"
            android:background="@drawable/thumbnail_overlay"
            android:padding="8dp" >

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Discovery: Men Vs Wild"
                android:textColor="@color/White"

        ></TextView>

            <TextView
                android:id="@+id/textView3"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textSize="10dp"
                android:layout_below="@+id/textView10"
                android:text="Director: Ash Bolland"
                android:textColor="@color/White"
                 android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
         android:background="@layout/tv_guide_small_bar"  >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="5dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/btn_checkin" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="CHECK-IN"
                 android:textColor="#08c6f7"
            android:textSize="4pt"  />

        </RelativeLayout>
         <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >
        </RelativeLayout>
         <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

             <ImageView
                 android:id="@+id/imageView6"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentLeft="true"
                 android:layout_alignTop="@+id/textView9"
                 android:src="@drawable/like" />

             <TextView
                 android:id="@+id/textView9"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_centerVertical="true"
                 android:layout_margin="1dp"
                 android:layout_toRightOf="@+id/imageView6"
                 android:text="1280 Likes"
                 android:textColor="#8a8a9e" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight=".9"
        android:orientation="vertical"
        android:background="@drawable/viwersbg" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                 >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" 
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:text="Total Viewers"
                        android:textColor="#8a8a9e"
                        android:layout_marginTop="5dp"
                        android:textSize="10dp" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/textView4"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/icon_viewers" />

                </RelativeLayout>
                  <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" 
                    android:layout_weight="1">

                      <TextView
                          android:id="@+id/textView6"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_centerHorizontal="true"
                          android:layout_centerVertical="true"
                          android:textStyle="bold"
                          android:textSize="15dp"
                          android:textColor="@color/White"
                          android:text="1,634" />

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/btn_invitefrnds" />

                 <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text=" Invite\nFriends"
            android:textColor="#08c6f7" />

            </RelativeLayout>
             <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                >

                 <RelativeLayout
                     android:layout_width="fill_parent"
                     android:layout_height="fill_parent"
                     android:layout_weight="1" >

                     <ImageView
                         android:id="@+id/imageView4"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_alignParentLeft="true"
                         android:layout_alignTop="@+id/textView5"
                         android:src="@drawable/icon_friends" />

                     <TextView
                         android:id="@+id/textView5"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_centerVertical="true"
                         android:layout_toRightOf="@+id/imageView4"
                         android:text="Friends"
                         android:layout_marginLeft="5dp"
                         android:textColor="#8a8a9e"
                         android:textSize="10dp" />

                 </RelativeLayout>

                  <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" 
                    android:layout_weight="1">

                      <TextView
                          android:id="@+id/textView7"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_centerHorizontal="true"
                          android:layout_centerVertical="true"
                          android:textStyle="bold"
							android:textSize="15dp"
							android:textColor="@color/White"
                          android:text="300" />

                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
            <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/btn_shoutnow_normal" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/imageView2"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="41dp"
                    android:textSize="10dp"
                    android:textColor="@color/White"
                    android:text="567 Comments" />

        </RelativeLayout>

    </LinearLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@layout/tv_guide_small_bar" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
        android:textColor="#8b8bab"
            android:text="Men Vs Wild" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:layout_marginTop="14dp"
            android:textColor="@color/LightGrey"
            
            android:textSize="12dp"
            
            android:text="Man vs. Wild,also called Born Survivor: Bear Grylls, Ultimate Survival, Survival Game, or colloquially  as simply Bear Grylls in the United Kingdom, is a survival television series hosted by Bear Grylls on the Discovery Channel.\n In the United Kingdom,
the series was originally shown on Channel 4, but later series were broadcast on Discovery Channel UK. The series was produced by British
 television production company Diverse Bristol." />

    </RelativeLayout>
    
    </LinearLayout>
    </ScrollView>

</LinearLayout>
