<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/mostpopular_itembody"
        android:layout_width="match_parent"
        android:layout_height="155dp" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >
            
            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/thumbnail_overlay" 
            android:alpha="60">

                 <TextView
                android:id="@+id/Notification_programName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Medium Text"
                android:textColor="#ffffff" />

                 <TextView
                     android:id="@+id/Notification_programDesc"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignParentLeft="true"
                     android:layout_below="@+id/Notification_programName"
                     android:text="TextView"
                      android:textColor="#ffffff" />

        </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
